page {
    background: #F2F2F2;
}

.page_bg {
    background-color: #ccc;
    width: 750rpx;
    height: 640rpx;
    position: absolute;
    top: 0;
    z-index: -1;
}

.user_info {
    width: 690rpx;
    height: 424rpx;
    background-color: #fff;
    border-radius: 20rpx;
    margin: 488rpx auto 0;
}

.iconxuanze-yixuan {
    font-size: 40rpx;
    color: #03BF9D;
    margin-right: 16rpx;
}

.serve_list {
    justify-content: center;
    height: 112rpx;
    align-items: center;
}

.serve_item {
    margin-right: 30rpx;
    align-items: center;
    font-size: 30rpx;
    color: #333333;
}

.address {
    width: 542rpx;
    height: 72rpx;
    border: 1rpx solid #CCCCCC;
    opacity: 1;
    border-radius: 10rpx;
    margin: 0 auto 32rpx;
    color: #ccc;
    padding: 0 25rpx;
    justify-content: space-between;
    align-items: center;
}

.icondingwei, .iconshoujihao {
    font-size: 35rpx;
    margin-right: 16rpx;
}

.iconxiangyou {
    font-size: 28rpx;
}

.submit_btn {
    width: 592rpx;
    height: 72rpx;
    background: #03BF9D;
    border-radius: 10rpx;
    text-align: center;
    line-height: 72rpx;
    color: #fff;
    margin: 0 auto;
}

.understand_wrap {
    width: 690rpx;
    height: 800rpx;
    background: #FFFFFF;
    opacity: 1;
    border-radius: 20rpx;
    margin: 32rpx auto 0;
    padding-top: 32rpx;
}

.sample_title {
    font-size: 40rpx;
    line-height: 1;
    color: #333333;
    margin: 0 auto 32rpx;
    text-align: center;
    position: relative;
    display: flex;
    width: 240rpx;
}

.sample_title:after {
    content: '';
    position: absolute;
    width: 39rpx;
    height: 21rpx;
    background-image: url("https://www.mengniuhealth.cn/fitment/icon/sample_title.png");
    background-repeat: no-repeat;
    background-size: cover;
    transform: translateY(-50%);
    top: 50%;
    right: -50rpx;
}

.sample_title:before {
    content: '';
    position: absolute;
    width: 39rpx;
    height: 21rpx;
    background-image: url("https://www.mengniuhealth.cn/fitment/icon/sample_title.png");
    background-repeat: no-repeat;
    background-size: cover;
    top: 50%;
    transform: translateY(-50%);
    left: -55rpx;
}

.understand_list {
    width: 650rpx;
    background: #F2F2F2;
    opacity: 1;
    border-radius: 20rpx;
    margin: 0 auto;
    overflow: hidden;
}

.understand_item .img {
    width: 325rpx;
    height: 244rpx;
    background-color: #ccc;
}

.introduce {
    font-size: 26rpx;
    font-weight: 400;
    line-height: 1;
    color: #999999;
    padding-top: 65rpx;
    text-align: center;
}

.introduce .txt {
    font-size: 30rpx;
    width: 325rpx;
    font-weight: 400;
    line-height: 1;
    color: #333333;
    margin: 0 auto 16rpx;
}