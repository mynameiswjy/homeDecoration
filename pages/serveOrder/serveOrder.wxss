page {
    background: #F2F2F2;
}

.order_top {
    width: 750rpx;
    height: 375rpx;
    background-color: #ccc;
    color: #fff;
}

.order_name {
    font-size: 36rpx;
    line-height: 1;
    padding-top: 88rpx;
    margin: 0 0 32rpx 30rpx;
    font-weight: 600;
}

.order_top .txt {
   font-size: 28rpx;
    line-height: 1;
    margin-left: 30rpx;
}

.progress {
    width: 750rpx;
}

.progress_item {
    text-align: center;
    width: 120rpx;
    justify-content: center;
    flex: 1;
    margin-top: 75rpx;
}

.progress_item_right {
}

.progress_item .icon {
    width: 30rpx;
    height: 30rpx;
    background-color: #fff;
    border-radius: 30rpx;
    margin-bottom: 12rpx;
    position: relative;
    margin-left: 45rpx;
}

.progress_item .icon1:after {
    content: '';
    width: 126rpx;
    height: 4rpx;
    position: absolute;
    background-color: #fff;
    transform: translateY(-50%);
    left: 15rpx;
    top: 50%;
}

.progress_item .name {
    color: #fff;
    font-size: 24rpx;
    width: 120rpx;
}

.nav {
    width: 750rpx;
    height: 96rpx;
    background-color: #fff;
    font-size: 32rpx;
    font-weight: 400;
    line-height: 24rpx;
    color: #999999;
    justify-content: center;
    margin-bottom: 24rpx;
}

.nav_item {
    height: 96rpx;
    line-height: 96rpx;
    position: relative;
}

.nav_item1 {
    color: #03BF9D;
}

.nav_item1:before {
    content: '';
    height: 4rpx;
    width: 40rpx;
    position: absolute;
    background-color: #03BF9D;
    bottom: 0;
    transform: translateX(-50%);
    left: 50%;
}

.user_info {
    width: 690rpx;
    background-color: #fff;
    padding: 32rpx 30rpx;
}

.user_info .top {
    padding-bottom: 32rpx;
    border-bottom: 1rpx solid #DFDFDF;
    align-items: center;
}

.user_info .img {
    width: 114rpx;
    height: 116rpx;
    border-radius: 50%;
    background-color: #ccc;
    margin-right: 16rpx;
}

.user_info .top .top_center {
    font-size: 28rpx;
    line-height: 1;
    color: #333333;
}

.user_info .top .top_center .txt2 {
    margin: 16rpx 0;
}

.score_btn {
    width: 122rpx;
    height: 38rpx;
    border-radius: 38rpx;
    font-size: 24rpx;
    line-height: 38rpx;
    color: #03BF9D;
    text-align: center;
    border: 1rpx solid #03BF9D;
    margin-left: 25rpx;
}

.user_info .icon {
    width: 24rpx;
    height: 24rpx;
    border: 2rpx solid #CCCCCC;
    background-color: #fff;
    margin-bottom: 30rpx;
}

.user_info .progress {
    width: 690rpx;
}

.user_info .progress_item .icon1:after {
    background-color: #ccc;
    width: 114rpx;
    left: 28rpx;
}

.user_info .progress_item .name {
    color: #999;
}

.daily_wrap {
    width: 750rpx;
    height: 1500rpx;
    background: #FFFFFF;
    margin-top: 24rpx;
    font-size: 28rpx;
    color: #333;
    padding: 24rpx 30rpx 0 43rpx;
    box-sizing: border-box;
}

.daily_item {
    padding-left: 29rpx;
    border-left: 4rpx solid #ccc;
    width: 644rpx;
}

.daily_title {
    justify-content: space-between;
    position: relative;
}
.daily_title:before {
    content: '';
    position: absolute;
    top: 0;
    left: -46rpx;
    width: 30rpx;
    height: 30rpx;
    background: #03BF9D;
    border: 2rpx solid #CCCCCC;
    border-radius: 30rpx;
}

.daily_title .time {
    font-size: 22rpx;
    line-height: 1;
    color: #999999;
}

.daily_content {
    margin: 24rpx 0;
    line-height: 36rpx;
}

.daily_img {
    flex-wrap: wrap;
}

.daily_img image {
    width: 208rpx;
    height: 208rpx;
    background: #987A7A;
    border-radius: 10rpx;
    margin-bottom: 10rpx;
}

.daily_img .mar_right{
    margin-right: 10rpx;
}

.daily_bott {
    color: #999;
    padding: 12rpx 0 49rpx;
}

.playback_img {
    width: 337rpx;
    height: 190rpx;
    background: #746666;
    border-radius: 10rpx;
}

.playback_title {
    font-size: 32rpx;
    line-height: 1;
    color: #010101;
    border-left: 4rpx solid #03BF9D;
    padding-left: 16rpx;
    margin: 32rpx 30rpx;
}

.playback_wrap {

}

.playback_list {
    width: 690rpx;
    margin: 0 auto;
    flex-wrap: wrap;
}