
page {
    background-color: #F2F2F2;
}

.banner {
    width: 750rpx;
    height: 300rpx;
    background-color: #ccc;
    display: block;
}

.common_box {
    width: 750rpx;
    background-color: #fff;
    margin-top: 24rpx;
}

.top {
    padding: 32rpx 30rpx;
    box-sizing: border-box;
}

.top_price {
    font-size: 40rpx;
    font-weight: 400;
    line-height: 1;
    color: #E04B90;
    box-sizing: border-box;
    margin-bottom: 24rpx;
}
.top_name {
    font-size: 32rpx;
    line-height: 1;
    color: #333333;
    margin-bottom: 16rpx;
}

.evaluation {
    font-size: 24rpx;
    line-height: 1;
    color: #999999;
}

.bottom {
    height: 990rpx;
    font-size: 28rpx;
    color: #333;
    padding: 0 30rpx;
    box-sizing: border-box;
}

.bottom_item {
    line-height: 1;
    padding-top: 31rpx;
    padding-bottom: 33rpx;
    border-bottom: 1rpx solid #f2f2f2;
}

.active_txt1 {
    font-size: 28rpx;
    line-height: 1;
    color: #999999;
    padding: 32rpx 0 20rpx;
}

.active_txt2 {
    line-height: 42rpx;
}

.subscribe_btn {
    width: 690rpx;
    height: 88rpx;
    background: #03BF9D;
    opacity: 1;
    border-radius: 44rpx;
    font-size: 36rpx;
    line-height: 88rpx;
    text-align: center;
    color: #FFFFFF;
    margin:76rpx auto 0;
}