    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-image: url("https://www.mengniuhealth.cn/fitment/icon/envelope_bg.png");
    background-size: cover;
    background-repeat: no-repeat;
}

.hb_title {
