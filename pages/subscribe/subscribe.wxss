page {
    background: #F2F2F2;
}

.page_bg {
    width: 750rpx;
    height: 640rpx;
    position: fixed;
    top: 0;
    background-size: cover;
    background-repeat: no-repeat;
    z-index: -1;
}

.flow_wrap {
    width: 690rpx;
    height: 624rpx;
    background-color: #fff;
    margin: 0 auto 24rpx;
    border-radius: 20rpx;
}

.flow_title {
    font-size: 40rpx;
    font-weight: 400;
    line-height: 1;
    color: #333333;
    text-align: center;
    padding: 32rpx 0;
}

.flow_wrap .img {
    width: 55rpx;
    height: 55rpx;
    background-color: #ccc;
    display: block;
    margin: 0 auto 16rpx;
}

.flow_list {
    justify-content: space-between;
    padding: 0 38rpx;
    margin-bottom: 64rpx;
}

.flow_item {
    text-align: center;
    font-size: 28rpx;
    line-height: 1;
    color: #333333;
}

.flow_list .arrows {
    width: 47rpx;
    height: 23.7rpx;
    background-color: #ccc;
    margin-top: 16rpx;
}

.input_wrap {
    width: 530rpx;
    height: 70rpx;
    border: 1rpx solid #CCCCCC;
    opacity: 1;
    border-radius: 10rpx;
    margin: 0 auto 32rpx;
    color: #ccc;
    justify-content: space-between;
    padding: 0 30rpx;
    align-items: center;
    font-size: 28rpx;
}

.icondingwei {
    font-size: 32rpx;
    margin-right: 16rpx;
}

.iconxiangyou {
    font-size: 26rpx;
}

.iconshoujihao {
    font-size: 32rpx;
    margin-right: 19rpx;
}

.input_wrap .input {
    height: 70rpx;
    width: 470rpx;
    color: #333;
}

.subscribe_btn {
    width: 592rpx;
    height: 72rpx;
    background: #03BF9D;
    border-radius: 10rpx;
    margin: 0 auto;
    font-size: 36rpx;
    color: #FFFFFF;
    text-align: center;
    line-height: 72rpx;
}