}

.sample_title {
    font-size: 40rpx;
    line-height: 1;
    color: #333333;
    margin: 50rpx auto 24rpx;
    text-align: center;
    position: relative;
    display: flex;
    width: 280rpx;
}

.sample_title:after {
    content: '';
    position: absolute;
    width: 39rpx;
    height: 21rpx;
    background-image: url("https://www.mengniuhealth.cn/fitment/icon/sample_title.png");
    background-repeat: no-repeat;
    background-size: cover;
    transform: translateY(-50%);
    top: 50%;
    right: -50rpx;
}

.sample_title:before {
    content: '';
    position: absolute;
    width: 39rpx;
    height: 21rpx;
    background-image: url("https://www.mengniuhealth.cn/fitment/icon/sample_title.png");
    background-repeat: no-repeat;
    background-size: cover;
    top: 50%;
    transform: translateY(-50%);
    left: -55rpx;
}

.sample_list {
    width: 690rpx;
    margin: 0 auto;
    flex-wrap: wrap;
}

.sample_item {
    width: 214rpx;
}

.sample_mar_right {
    margin-right: 24rpx;
}

.sample_img {
    width: 214rpx;
    max-height: 214rpx;
    background-color: #ccc;
    border-radius: 10rpx;
}

.sample_item .txt {
    font-size: 30rpx;
    line-height: 1;
    color: #333333;
    text-align: center;
    margin: 16rpx 0 32rpx;
}

.hb_wrap {
    position: fixed;
    top: 0;
